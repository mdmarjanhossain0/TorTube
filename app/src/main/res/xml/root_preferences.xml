<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/Settings"
        >

        <EditTextPreference
            android:icon="@drawable/buffer_size"
            android:inputType="number"
            android:key="@string/buffer_size"
            android:title="Buffer Size"
            android:defaultValue="1"
            android:persistent="false"
            />
        <EditTextPreference
            android:key="@string/streaming_speed"
            android:title="Streaming Speed"
            android:inputType="number"
            android:defaultValue="0"
            android:icon="@drawable/streaming_speed"
            android:persistent="false"
            />
        <EditTextPreference
            android:key="@string/seeding_speed"
            android:title="Seeding Speed"
            android:inputType="number"
            android:defaultValue="0"
            android:icon="@drawable/seeding_speed"
            android:persistent="false"
            />
        <EditTextPreference
            android:key="@string/port_number"
            android:title="Port Number"
            android:inputType="number"
            android:icon="@drawable/port_number"
            android:defaultValue="2000"
            android:persistent="false"
            />
        <SwitchPreferenceCompat
            android:key="@string/save_status"
            android:title="Save File"
            android:icon="@drawable/ic_save"
            android:defaultValue="true"
            android:summary="Save File After Streaming"
            />
    </PreferenceCategory>

</PreferenceScreen>